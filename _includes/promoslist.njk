<div class="container">
<div class="row mt-5">
<h3 class="text-center p-1 border bg-bgs">Web App</h3>
<!-- promo banner start -->
<div class="p-3 text-center">
<a href="{{ metadata.slug.url2 }}"><img class="img-fluid rounded shadow" width="100%" height="100%" src="{{ metadata.slug.cont2 }}" alt="{{ metadata.slug.sub2 }}"/></a>
</div>
<!-- end banner promo -->
{% for promo in promoslist | reverse %}
<div reversed class="promolist col-md-4 p-1" style="counter-reset: start-from {{ (promoslistCounter or promoslist.length) + 1 }}">

<div class="card">
<a href="{{ promo.url | url }}" class="promolist-link">
  <img class="card-img-top" width="100%" height="100%" alt="{{ promo.data.title }}" src="{{ promo.data.cover }}"/>
  <div class="card-body p-1 promoslist-item{% if promo.url == url %} promolist-item-active{% endif %}">
      <div class="card-body">
        <h4 class="card-title">{% if promo.data.title %}{{ promo.data.title }}{% else %}<code>{{ promo.url }}</code>{% endif %}</h4>
    <p class="card-text"><small><time class="promolist-date text-secondary" datetime="{{ promo.date | htmlDateString }}">{{ promo.date | readableDate }}</time></small></p>
      </div>
  </div>
  </a>
</div>
</div>
{% endfor %}
<!-- promo banner start -->
<div class="p-3 text-center">
<a href="{{ metadata.slug.url3 }}"><img class="img-fluid rounded shadow" width="100%" height="100%" src="{{ metadata.slug.cont3 }}" alt="{{ metadata.slug.sub3 }}"/></a></div>
<!-- end banner promo -->
</div>
</div>
